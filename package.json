{
	"name": "granola-ts-client",
	"version": "0.10.0",
	"description": "TypeScript client for the Granola API with automatic client validation bypass",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./utils": {
			"types": "./dist/utils/token-extractor.d.ts",
			"import": "./dist/utils/token-extractor.js",
			"require": "./dist/utils/token-extractor.js",
			"default": "./dist/utils/token-extractor.js"
		},
		"./package.json": "./package.json"
	},
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"files": ["dist", "README.md", "LICENSE"],
	"scripts": {
		"generate": "bun x openapi-typescript-codegen --input openapi.yaml --output src/internal/generated --client fetch && bun x openapi-typescript openapi.yaml -o src/schema.d.ts",
		"build": "bun run generate && bun build src/index.ts --outdir dist && bun build src/utils/token-extractor.ts --outdir dist/utils --target node && bun run build:types",
		"build:types": "tsc -p tsconfig.build.json",
		"test": "bun test",
		"format": "biome format --write .",
		"lint": "biome check --fix src/{index,http,pagination,client}.ts tests",
		"lint:check": "biome check src/{index,http,pagination,client}.ts tests",
		"dev": "bun run format && bun run lint && bun run test",
		"ci": "rm -rf dist && bun run format && bun run lint:check && bun run test && bun run build",
		"prepublishOnly": "bun run ci"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/bun": "latest",
		"@biomejs/biome": "latest",
		"openapi-typescript-codegen": "^0.29.0",
		"openapi-typescript": "^7.8.0",
		"typescript": "^5.0.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"keywords": [
		"granola",
		"api",
		"client",
		"typescript",
		"meetings",
		"notes",
		"official-client",
		"compatibility",
		"macos"
	],
	"author": "Mike Demarais",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mikedemarais/granola-ts-client.git"
	},
	"bugs": {
		"url": "https://github.com/mikedemarais/granola-ts-client/issues"
	},
	"homepage": "https://github.com/mikedemarais/granola-ts-client#readme"
}
