{
  "name": "granola-ts-client",
  "version": "0.6.0",
  "description": "TypeScript client for the Granola API with automatic client validation bypass",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "generate": "openapi-typescript openapi.yaml -o src/schema.d.ts",
    "build": "bun build src/index.ts --outdir dist && bun run build:types && bun run build:schema",
    "build:types": "tsc -p tsconfig.build.json",
    "build:schema": "cp src/schema.d.ts dist/",
    "test": "bun test",
    "format": "biome format . --write",
    "lint": "biome check .",
    "ci": "bun run lint && bun run test && bun run build",
    "prepublishOnly": "bun run ci"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "biome": "^0.3.3",
    "openapi-typescript": "^7.6.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "granola",
    "api",
    "client",
    "typescript",
    "meetings",
    "notes",
    "official-client",
    "compatibility",
    "macos"
  ],
  "author": "Mike Demarais",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikedemarais/granola-ts-client.git"
  },
  "bugs": {
    "url": "https://github.com/mikedemarais/granola-ts-client/issues"
  },
  "homepage": "https://github.com/mikedemarais/granola-ts-client#readme"
}