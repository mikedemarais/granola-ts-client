{
	"$schema": "https://biomejs.dev/schemas/biome.json",
	"files": {
		"ignore": ["node_modules/**", "coverage/**", "*.lock", "dist/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style/useNodejsImportProtocol": "off",
			"complexity/noExcessiveCognitiveComplexity": "warn",
			"suspicious/noConsole": {
				"level": "warn",
				"options": { "allow": ["warn", "error", "info"] }
			}
		}
	},
	"formatter": { "enabled": true },
	"organizeImports": { "enabled": true }
}
